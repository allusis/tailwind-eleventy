{% import "theme.njk" as theme %}
<!DOCTYPE html>
<html class="h-full" lang="{{ metadata.siteLanguageAbbr }}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <head>
    {% include "meta.njk" %}
    {% include "favicon.njk" %}
    <link rel="stylesheet" href="/css/style.css"/>
    <script src="js/head-scripts.js"></script>
  </head>
  <body class="{{ theme.bodyBg }} h-full">
    <div>
      <!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
      <div class="relative z-50 lg:hidden" role="dialog" aria-modal="true">
        <!--
          Off-canvas menu backdrop, show/hide based on off-canvas menu state.

          Entering: "transition-opacity ease-linear duration-300"
            From: "opacity-0"
            To: "opacity-100"
          Leaving: "transition-opacity ease-linear duration-300"
            From: "opacity-100"
            To: "opacity-0"
        -->
        <div class="fixed inset-0 bg-zinc-900/80" aria-hidden="true"></div>

        <div class="fixed inset-0 flex">
          <!--
            Off-canvas menu, show/hide based on off-canvas menu state.

            Entering: "transition ease-in-out duration-300 transform"
              From: "-translate-x-full"
              To: "translate-x-0"
            Leaving: "transition ease-in-out duration-300 transform"
              From: "translate-x-0"
              To: "-translate-x-full"
          -->
          <div class="relative flex flex-1 w-full max-w-xs mr-16">
            <!--
              Close button, show/hide based on off-canvas menu state.

              Entering: "ease-in-out duration-300"
                From: "opacity-0"
                To: "opacity-100"
              Leaving: "ease-in-out duration-300"
                From: "opacity-100"
                To: "opacity-0"
            -->
            <div class="absolute top-0 flex justify-center w-16 pt-5 left-full">
              <button type="button" class="-m-2.5 p-2.5">
                <span class="sr-only">Close sidebar</span>
                <svg class="text-white size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            <!-- Sidebar component, swap this element with another sidebar if you like -->
            <div class="flex flex-col px-6 pb-2 overflow-y-auto bg-zinc-900 grow gap-y-5 ring-1 ring-white/10">
              <div class="flex items-center h-16 shrink-0">
                <img class="w-auto h-8" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
              </div>
              <nav class="flex flex-col flex-1">
                <ul role="list" class="flex flex-col flex-1 gap-y-7">
                  <li>
                    <ul role="list" class="-mx-2 space-y-1">
                      <li>
                        <!-- Current: "bg-zinc-800 text-white", Default: "text-zinc-400 hover:text-white hover:bg-zinc-800" -->
                        <a href="#" class="flex p-4 font-semibold text-white rounded-md bg-zinc-800 group gap-x-3 text-sm/6">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                          </svg>
                          Dashboard
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                          </svg>
                          Team
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                          </svg>
                          Projects
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                          </svg>
                          Calendar
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
                          </svg>
                          Documents
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6a7.5 7.5 0 1 0 7.5 7.5h-7.5V6Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5H21A7.5 7.5 0 0 0 13.5 3v7.5Z" />
                          </svg>
                          Reports
                        </a>
                      </li>
                    </ul>
                  </li>
                  <li>
                    <div class="font-semibold text-zinc-400 text-xs/6">Your teams</div>
                    <ul role="list" class="mt-2 -mx-2 space-y-1">
                      <li>
                        <!-- Current: "bg-zinc-800 text-white", Default: "text-zinc-400 hover:text-white hover:bg-zinc-800" -->
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-zinc-700 bg-zinc-800 text-[0.625rem] font-medium text-zinc-400 group-hover:text-white">H</span>
                          <span class="truncate">Heroicons</span>
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-zinc-700 bg-zinc-800 text-[0.625rem] font-medium text-zinc-400 group-hover:text-white">T</span>
                          <span class="truncate">Tailwind Labs</span>
                        </a>
                      </li>
                      <li>
                        <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                          <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-zinc-700 bg-zinc-800 text-[0.625rem] font-medium text-zinc-400 group-hover:text-white">W</span>
                          <span class="truncate">Workcation</span>
                        </a>
                      </li>
                    </ul>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>

      <!-- Static sidebar for desktop -->
      <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
        <!-- Sidebar component, swap this element with another sidebar if you like -->
        <div class="flex flex-col px-6 overflow-y-auto bg-zinc-900 grow">
          <div class="flex items-center h-24 shrink-0">

            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 64 64" class="w-10 h-10"><g class="nc-icon-wrapper" fill="currentColor"><path d="M62.866,5.5A1,1,0,0,0,62,5H2a1,1,0,0,0-.866,1.5l30,52a1,1,0,0,0,1.732,0l30-52A1,1,0,0,0,62.866,5.5ZM32,31a8.5,8.5,0,1,1,8.5-8.5A8.5,8.5,0,0,1,32,31Z" fill="currentColor"></path></g></svg>
          </div>
          <nav class="flex flex-col flex-1">
            <ul role="list" class="flex flex-col flex-1 gap-y-7">
              <li>
                <ul role="list" class="-mx-2 space-y-1">
                  <li>
                    <!-- Current: "bg-zinc-800 text-white", Default: "text-zinc-400 hover:text-white hover:bg-zinc-800" -->
                    <a href="#" class="flex p-4 font-semibold text-white rounded-md bg-zinc-800 group gap-x-3 text-sm/6">
                      <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                      </svg>
                      Dashboard
                    </a>
                  </li>
                  <li>
                    <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <g class="nc-icon-wrapper" fill="currentColor" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M23,12A11,11,0,1,1,12,1" fill="none" stroke="currentColor" stroke-width="2"></path>
                          <path d="M6,12a6,6,0,1,1,6,6" fill="none" stroke="currentColor" stroke-width="2"></path>
                          <circle cx="12" cy="12" r="2" fill="currentColor" data-color="color-2" data-stroke="none" stroke="none"></circle>
                          <path d="M16,1.751A11.035,11.035,0,0,1,22.25,8" fill="none" stroke="currentColor" stroke-width="2" data-color="color-2">
                          </path>
                        </g>
                      </svg>
                      Sensors
                    </a>
                  </li>
                  <li>
                    <a href="#" class="flex p-4 font-semibold rounded-md text-zinc-400 group gap-x-3 text-sm/6 hover:bg-zinc-800 hover:text-white">
                      <svg class="size-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                      </svg>
                      Modules
                    </a>
                  </li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </div>

      <div class="sticky top-0 z-40 flex items-center px-4 py-4 shadow-sm bg-zinc-900 gap-x-6 sm:px-6 lg:hidden">
        <button type="button" class="-m-2.5 p-2.5 text-zinc-400 lg:hidden">
          <span class="sr-only">Open sidebar</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
        <div class="flex-1 font-semibold text-white text-sm/6">Dashboard</div>
      </div>

      <main class="py-10 lg:pl-72">
        <div class="px-4 sm:px-6 lg:px-8">
          {{ content | safe }}
          <div class="pt-32 text-xs leading-5 text-center opacity-50">&copy; <span id="year"></span> {{ metadata.siteName }} &middot; All rights reserved.<script>document.getElementById("year").innerHTML = new Date().getFullYear();</script></div>
        </div>
      </main>
    </div>


    <script src="/js/scripts.js"></script>
  </body>
</html>
